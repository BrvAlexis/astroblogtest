---
interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  faqs: FaqItem[];
}

const { title, faqs } = Astro.props;
---

<section class="faq-section">
  <h2 class="mdl-typography--display-2">{title}</h2>
  <div class="faq-container">
    {
      faqs.map((faq, index) => (
        <div class="mdl-card mdl-shadow--2dp faq-card">
          <div
            class="mdl-card__title mdl-card--expand"
            onclick={`document.getElementById('faq-${index}').classList.toggle('is-expanded')`}
          >
            <h3 class="mdl-card__title-text">{faq.question}</h3>
            <button class="mdl-button mdl-js-button mdl-button--icon">
              <i class="material-icons">expand_more</i>
            </button>
          </div>
          <div class="mdl-card__supporting-text faq-answer" id={`faq-${index}`}>
            {faq.answer}
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .faq-section {
    padding: 32px 16px;
    text-align: center;
  }
  @media (min-width: 840px) {
    .faq-section {
      padding: 64px 32px;
    }
  }
  .faq-container {
    width: 100%;
    max-width: 800px;
    margin: 32px auto;
    padding: 0 16px;
  }
  @media (min-width: 840px) {
    .faq-container {
      margin: 48px auto;
      padding: 0;
    }
  }
  .faq-card {
    width: 100%;
    margin-bottom: 16px;
  }
  .mdl-card__title {
    padding: 16px;
  }
  @media (min-width: 480px) {
    .mdl-card__title {
      padding: 24px;
    }
  }
  .mdl-card__supporting-text {
    padding: 16px;
  }
  @media (min-width: 480px) {
    .mdl-card__supporting-text {
      padding: 24px;
    }
  }
</style>

<script>
  // Animation de l'icÃ´ne lors du clic
  document.querySelectorAll(".mdl-card__title").forEach((title) => {
    title.addEventListener("click", () => {
      const icon = title.querySelector(".material-icons");
      icon.style.transform =
        icon.style.transform === "rotate(180deg)"
          ? "rotate(0deg)"
          : "rotate(180deg)";
    });
  });
</script>
