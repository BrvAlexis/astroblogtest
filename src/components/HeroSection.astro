---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title,
  subtitle,
  ctaText = "En savoir plus",
  ctaLink = "#",
} = Astro.props;
---

<section class="hero-section">
  <div class="hero-content">
    <h1 class="mdl-typography--display-3 fade-in">{title}</h1>
    <p class="mdl-typography--headline fade-in">{subtitle}</p>
    <div class="cta-wrapper fade-in">
      <a
        class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect"
        href={ctaLink}
      >
        {ctaText}
      </a>
    </div>
  </div>
  <div class="hero-background"></div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    background: linear-gradient(45deg, #6200ea, #3f51b5);
    color: white;
    width: 100%;
    max-width: 100vw;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    max-width: 800px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("/hero-pattern.svg") center/cover;
    opacity: 0.1;
    animation: pulse 10s ease-in-out infinite;
  }

  .mdl-typography--display-3 {
    margin-bottom: 1rem;
    font-weight: 300;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .mdl-typography--headline {
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .cta-wrapper {
    margin-top: 3rem;
  }

  .mdl-button {
    font-size: 1.2rem;
    padding: 0 2rem;
    height: 54px;
    line-height: 54px;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.8s ease-out forwards;
  }

  .fade-in:nth-child(2) {
    animation-delay: 0.2s;
  }

  .fade-in:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 600px) {
    .hero-section {
      min-height: 60vh;
    }

    .mdl-typography--display-3 {
      font-size: 2.5rem;
    }

    .mdl-typography--headline {
      font-size: 1.2rem;
    }
  }
</style>
