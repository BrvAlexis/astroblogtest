---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="mdl-layout__header">
  <div class="mdl-layout__header-row">
    <!-- Logo et titre -->
    <span class="mdl-layout-title">
      <a href="/" class="brand">
        <img src="/logo.svg" alt="Logo" class="logo" width="32" height="32" />
        {SITE_TITLE}
      </a>
    </span>

    <div class="mdl-layout-spacer"></div>

    <!-- Navigation principale -->
    <nav class="mdl-navigation mdl-layout--large-screen-only">
      <HeaderLink href="/">Accueil</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">À propos</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </nav>

    <!-- Menu mobile -->
    <button id="more-button" class="mdl-button mdl-js-button mdl-button--icon">
      <i class="material-icons">more_vert</i>
    </button>

    <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu" for="more-button">
      <li class="mdl-menu__item">
        <i class="material-icons">dark_mode</i>
        Mode sombre
      </li>
      <li class="mdl-menu__item">
        <i class="material-icons">language</i>
        Français
      </li>
    </ul>
  </div>

  <!-- Drawer pour mobile -->
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">{SITE_TITLE}</span>
    <nav class="mdl-navigation">
      <HeaderLink href="/">
        <i class="material-icons">home</i>
        Accueil
      </HeaderLink>
      <HeaderLink href="/blog">
        <i class="material-icons">article</i>
        Blog
      </HeaderLink>
      <HeaderLink href="/about">
        <i class="material-icons">info</i>
        À propos
      </HeaderLink>
      <HeaderLink href="/contact">
        <i class="material-icons">mail</i>
        Contact
      </HeaderLink>
    </nav>
  </div>
</header>

<style>
  .mdl-layout__header {
    background-color: var(--primary-color);
    color: white;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: white;
    font-weight: 500;
  }

  .logo {
    height: 32px;
    width: auto;
  }

  .mdl-navigation__link {
    color: white !important;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .mdl-navigation__link .material-icons {
    margin-right: 8px;
  }

  .mdl-navigation__link:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .mdl-navigation__link.active {
    border-bottom: 3px solid var(--accent-color);
  }

  .mdl-layout__drawer .mdl-navigation__link {
    color: var(--text-color) !important;
  }

  .mdl-menu__item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .mdl-menu__item .material-icons {
    font-size: 20px;
  }

  @media (max-width: 1024px) {
    .mdl-layout__header-row {
      padding: 0 16px;
    }
  }
</style>
