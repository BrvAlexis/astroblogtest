---
import PageLayout from "../layouts/PageLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import FeaturesGrid from "../components/FeaturesGrid.astro";
import CtaSection from "../components/CtaSection.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import StatsSection from "../components/StatsSection.astro";
import FaqSection from "../components/FaqSection.astro";
import SectionDivider from "../components/SectionDivider.astro";

const features = [
  {
    icon: "speed",
    title: "Performance",
    description: "Site ultra rapide grâce à Astro",
  },
  {
    icon: "brush",
    title: "Design",
    description: "Interface élégante avec Material Design",
  },
  {
    icon: "devices",
    title: "Responsive",
    description: "S'adapte à tous les écrans",
  },
];

const testimonials = [
  {
    name: "Marie Dupont",
    role: "CEO, TechStart",
    content: "Une expérience incroyable avec cette solution...",
    avatar: "/avatars/marie.jpg",
  },
  // ... autres témoignages
];

const stats = [
  {
    icon: "people",
    value: "10K+",
    label: "Utilisateurs actifs",
  },
  // ... autres stats
];

const faqs = [
  {
    question: "Comment commencer ?",
    answer: "C'est très simple, il suffit de...",
  },
  // ... autres FAQs
];
---

<PageLayout
  title="Accueil"
  description="Ma super landing page"
  fullWidth={true}
>
  <HeroSection
    title="Bienvenue sur mon site"
    subtitle="Une landing page moderne avec Material Design Lite"
  />
  <SectionDivider color="#ffffff" />
  <FeaturesGrid features={features} />
  <SectionDivider color="#3f51b5" />
  <StatsSection stats={stats} />
  <SectionDivider color="#f5f5f5" />
  <TestimonialsSection
    title="Ce que disent nos clients"
    testimonials={testimonials}
  />
  <SectionDivider color="#ffffff" />
  <CtaSection
    title="Prêt à commencer ?"
    description="Rejoignez-nous dès maintenant"
    buttonText="S'inscrire"
    buttonLink="/signup"
  />
  <SectionDivider color="#f5f5f5" />
  <FaqSection title="Questions fréquentes" faqs={faqs} />
</PageLayout>
